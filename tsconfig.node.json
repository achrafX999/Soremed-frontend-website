// tsconfig.node.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "emitDeclarationOnly": true,         // ← idem ici pour autoriser l’option
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,  // ← ok maintenant
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["vite.config.ts"]
}
